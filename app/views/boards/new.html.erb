<div>
  <h1>Add a board</h1>
</div>

<div class="button">
  <%= link_to "Home", "/" %>
</div>
  <div class="container-body">
    <div class="col-6">
      <%= simple_form_for(@board) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :user_id %>
          <%= f.collection_select :supplier_id, Supplier.all, :id, :name %>
          <%= f.input :price %>
          <%= f.input :size %>
          <%= f.input :brand %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :contact %>
          <%= f.input :photo, as: :file, direct_upload: 'true' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, method: :post, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
