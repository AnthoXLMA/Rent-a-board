<div>
  <h1>Add a board</h1>
</div>

<div class="button">
  <%= link_to "Home", "/" %>
</div>
<div class="container-body">
    <div class="col-6">
      <%= simple_form_for(@board) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :size %>
          <%= f.input :price %>
          <%= f.input :contact %>
          <%= f.input :description %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
</div>
