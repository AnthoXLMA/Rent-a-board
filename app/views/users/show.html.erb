<div class="container-show-user">
  <div class="container-user-infos">
    <div class="banner-user-infos">
    <%= @user.first_name %><br>
    <%= @user.location %><br>
    <%= @user.phone_number %><br>
    <%= @user.email %><br>
    <div class="user-photo-show">
      <%= cl_image_tag @user.photo.key %>
    </div>
  </div>
    <div class="user-actions">
      <% if user_signed_in? %>
        <p>Mes réservations</p>
          <% @user.bookings.each do |booking| %>
            <div class="booking-ticket">
              <p><%= booking.board.name %></p>
              <p><%= booking.board.user.first_name %></p>
              <p><%= booking.start_on %></p>
              <p><%= booking.end_on %></p>
              <p><%= booking.board.user.location %></p>
            </div>
              <% end %>
          <p>Mes locations</p>
            <% @my_rentals.each do |rental| %>
            <div class="booking-ticket">
              <%= rental.name %>
              <% rental.bookings.each do |rental_booking| %>
              <%= rental_booking.user.first_name %>
              <%= rental_booking.start_on %>
              <%= rental_booking.end_on %>
              <% end %>
            </div>
              <% end %>
          <p>Portefeuille</p>
          <% else %>
            <%= "you have to login to meet this member" %>
          <% end %>
        </div>
      </div>
    <div class="container-all-boards">
      <% @user.boards.each do |user_board| %>
    <div class="boards-cards">
      <a><%= user_board.name %></a><br>
      <a><%= user_board.description %></a><br>
      <a><%= user_board.address %></a><br>
      <a><%= user_board.size %>"</a><br>
      <a><%= user_board.price %>€</a><br>
      <div class="image-sizing">
        <img src="<%= cl_image_path user_board.photo.key %>">
      </div>
        <div class="buttons">
          <div class="btn btn-warning">
            <%= link_to "Réserver", user_board %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>
